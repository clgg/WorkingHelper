<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/product_item_product_image"
            android:src="@drawable/ic_launcher"
            android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_item_product_title"
        android:singleLine="true"
        android:text="aaaaa"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:id="@+id/product_item_product_des"
        android:text="aaaaa"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/product_item_user_head_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_item_user_enjoy_num"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="aaaaa"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/product_item_user_enjoy_num"
            android:layout_centerVertical="true"
            android:id="@+id/product_item_user_enjoy_image"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_item_user_ncik"
            android:layout_toRightOf="@id/product_item_user_head_image"
            android:layout_toLeftOf="@id/product_item_user_enjoy_image"
            android:layout_centerVertical="true"
            android:text="aaaaa"
            />
        </RelativeLayout>

</LinearLayout><!-- From: file:/home/clg/Git_Pro/niuco_android/niuco/res/layout/product_item_layout.xml -->